#!/usr/bin/env sh
. "$(dirname -- "$0")/_/husky.sh"

echo "üîç Running pre-commit hooks..."

# Run lint-staged
npx lint-staged

# Run gitleaks to scan for secrets
echo "üîí Scanning for secrets..."
if command -v gitleaks > /dev/null 2>&1; then
  gitleaks protect --verbose --staged
else
  echo "‚ö†Ô∏è  Gitleaks not found. Skipping secret scan."
  echo "   Install gitleaks: https://github.com/gitleaks/gitleaks#installation"
fi

echo "‚úÖ Pre-commit hooks completed!"




